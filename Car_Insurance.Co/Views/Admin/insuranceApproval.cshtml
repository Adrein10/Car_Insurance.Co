@model Car_Insurance.Co.Models.InsuranceApprovalView;
@{
    Layout = "_Admin";
}

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="card mt-3">
            <div class="card-content">
                <div class="row row-group m-0">
                    <div class="col-12 col-lg-6 col-xl-3 border-light">
                        <div class="card-body">
                            <h5 class="text-white mb-0">
                                9526 <span class="float-right">
                                    <i class="fa fa-shopping-cart"></i>
                                </span>
                            </h5>
                            <div class="progress my-3" style="height:3px;">
                                <div class="progress-bar" style="width:55%"></div>
                            </div>
                            <p class="mb-0 text-white small-font">
                                Customers <span class="float-right">
                                    +4.2% <i class="zmdi zmdi-long-arrow-up"></i>
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 col-xl-3 border-light">
                        <div class="card-body">
                            <h5 class="text-white mb-0">
                                8323 <span class="float-right">
                                    <i class="fa fa-usd"></i>
                                </span>
                            </h5>
                            <div class="progress my-3" style="height:3px;">
                                <div class="progress-bar" style="width:55%"></div>
                            </div>
                            <p class="mb-0 text-white small-font">
                                Insurence Requests <span class="float-right">
                                    +1.2% <i class="zmdi zmdi-long-arrow-up"></i>
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 col-xl-3 border-light">
                        <div class="card-body">
                            <h5 class="text-white mb-0">
                                6200 <span class="float-right">
                                    <i class="fa fa-eye"></i>
                                </span>
                            </h5>
                            <div class="progress my-3" style="height:3px;">
                                <div class="progress-bar" style="width:55%"></div>
                            </div>
                            <p class="mb-0 text-white small-font">
                                Pending <span class="float-right">
                                    +5.2% <i class="zmdi zmdi-long-arrow-up"></i>
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 col-xl-3 border-light">
                        <div class="card-body">
                            <h5 class="text-white mb-0">
                                5630 <span class="float-right">
                                    <i class="fa fa-envira"></i>
                                </span>
                            </h5>
                            <div class="progress my-3" style="height:3px;">
                                <div class="progress-bar" style="width:55%"></div>
                            </div>
                            <p class="mb-0 text-white small-font">
                                Approved <span class="float-right">
                                    +2.2% <i class="zmdi zmdi-long-arrow-up"></i>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="my-1">Insurance Requests</h5>
                    </div>
                    <div class="table-responsive">
                        <table id="insuranceTable" class="table align-items-center table-flush table-borderless">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Car Name</th>
                                    <th>Car Model</th>
                                    <th>Car Number</th>
                                    <th>Engine Number</th>
                                    <th>CC</th>
                                    <th>Plan</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var carDetail in Model.cardetail)
                                {
                                    foreach (var orderDetail in carDetail.OrderDetails)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => carDetail.User.Username)</td>
                                            <td>@Html.DisplayFor(modelItem => carDetail.Carname)</td>
                                            <td>@Html.DisplayFor(modelItem => carDetail.Carmodel)</td>
                                            <td>@Html.DisplayFor(modelItem => carDetail.Carnumber)</td>
                                            <td>@Html.DisplayFor(modelItem => carDetail.Enginenumber)</td>
                                            <td>@Html.DisplayFor(modelItem => carDetail.Carrcc)</td>
                                            <td>@Html.DisplayFor(modelItem => orderDetail.Plane.Planname)</td>
                                            <td>
                                                @if (orderDetail.StatusId == 1)
                                                {
                                                    <a asp-controller="Admin" asp-action="EditStatus" asp-route-id="@carDetail.Id" class="status-select">
                                                        <span class="badge badge-warning status px-4 py-2">Pending</span>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-success px-4 py-2">Approved</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                <!-- Add more <tr> for each insurance request -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#insuranceTable').on('click', '.status', function (e) {
            e.preventDefault(); // Prevent default behavior of <a> tag
            var statusBadge = $(this);

            if (statusBadge.text().trim() === 'Pending') {
                if (confirm('Are you sure you want to approve this insurance request?')) {
                    // Simulate an AJAX call to update the status (replace with actual AJAX if needed)
                    setTimeout(function () {
                        // Change status to Approved
                        statusBadge.removeClass('badge-warning').addClass('badge-success').text('Approved');
                    }, 500); // Replace with actual AJAX call

                    // Optionally, update the status on the server using AJAX

                    $.ajax({
                        url: statusBadge.closest('a').attr('href'),
                        method: 'POST',
                        success: function () {
                            // On success, update UI
                            statusBadge.removeClass('badge-warning').addClass('badge-success').text('Approved');
                        },
                        error: function () {
                            alert('Failed to update status. Please try again.');
                        }
                    });
                }
            }
        });

        // Handle cancel button click
        $('#insuranceTable').on('click', '.cancel-btn', function () {
            // Handle cancel button click logic here
            // This is where you can implement cancel logic
            console.log('Cancel button clicked');
        });
    });
</script>
