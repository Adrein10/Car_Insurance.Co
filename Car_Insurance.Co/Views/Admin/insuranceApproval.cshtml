        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="my-1">Insurance Requests</h5>
                    </div>
                    <div class="table-responsive">
                        <table id="insuranceTable" class="table align-items-center table-flush table-borderless">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Car Name</th>
                                    <th>Car Model</th>
                                    <th>Car Number</th>
                                    <th>Car Owner</th>
                                    <th>Engine Number</th>
                                    <th>CC</th>
                                    <th>Plan</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Iphone 5</td>
                                    <td>iphone5@example.com</td>
                                    <td>123-456-7890</td>
                                    <td>*********</td>
                                    <td>John Doe</td>
                                    <td>ABC12345</td>
                                    <td>1500</td>
                                    <td>1500</td>
                                    <td>
                                        <div class="status-select">
                                            <span class="badge badge-warning status px-4 py-2">Pending</span>
                                        </div>
                                    </td>
                                </tr>
                                <!-- Add more <tr> for each insurance request -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (Optional for alerts) -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- jQuery (Optional, needed for Bootstrap's JavaScript plugins) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        // Handle click on Pending status
        $('#insuranceTable').on('click', '.status', function () {
            // Get the status text
            var status = $(this).text().trim();

            if (status === 'Pending') {
                // Show confirmation dialog
                if (confirm('Are you sure you want to approve this insurance request?')) {
                    // Change status to Approved
                    $(this).removeClass('badge-warning').addClass('badge-success').text('Approved');
                }
            }
        });
    });
</script>
