@{
    Layout = "_Admin";
}
@{
    ViewData["Title"] = "RegisterAdmin";
}

<div class="content-wrapper  " >
    <div class="container-fluid ">

        <div class="row mt-3 d-flex justify-content-center" >
            <div class="col-lg-6" >
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex justify-content-center py-3">Register Admin</div>
                        <hr>
                        <form class="my-5">
                            <div class="form-group px-2 mt-3">
                                <label for="input-1" >Name</label>
                                <input type="text" class="form-control" name="name" id="input-1" placeholder="Enter Your Name">
                            </div>
                            <div class="form-group px-2 mt-3">
                                <label for="input-2">Email</label>
                                <input type="text" class="form-control" name="email" id="input-2" placeholder="Enter Your Email Address">
                            </div>                
                            <div class="form-group px-2 mt-3">
                                <label for="input-4">Password</label>
                                <input type="text" class="form-control" name="password" id="input-4" placeholder="Enter Password">
                            </div>
                            <div class="form-group px-2 mt-3">
                                <label for="input-5">Confirm Password</label>
                                <input type="text" class="form-control" name="cpassword" id="input-5" placeholder="Confirm Password">
                            </div>
                            <div class="form-group px-2 mt-3">
                                <div class="icheck-material-white">
                                    <input type="checkbox" id="user-checkbox1" name="term" checked="" />
                                    <label for="user-checkbox1" >I Agree Terms & Conditions</label>
                                </div>
                            </div>
                            <div class="form-group d-flex justify-content-center pt-3 mt-3">
                                <button type="submit" name="register" class="btn btn-light px-5 "><i class="icon-lock"></i> Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div><!--End Row-->
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div><!--End content-wrapper-->
